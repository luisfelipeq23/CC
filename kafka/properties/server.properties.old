# # Kafka configuración broker
broker.id=0
bootstrap.servers=cc_kafka:9092
log.dirs=/kafka/kafka-logs
num.partitions=1
num.network.threads=3
num.io.threads=8
socket.send.buffer.bytes=102400
socket.receive.buffer.bytes=102400
socket.request.max.bytes=104857600
default.replication.factor=1
log.dirs=/tmp/kafka-logs

advertised.port=9092
advertised.host.name=cc_kafka
listeners=PLAINTEXT://:9092
advertised.listeners=PLAINTEXT://cc_kafka:9092

zookeeper.connect=cc_zookeeper:2181
#192.168.0.2
num.partitions=1
auto.create.topics.enable=false
auto.create.topics.max.number=100
delete.topic.enable=true

# Configuración de los Topics
num.partitions=1
auto.create.topics.enable=false
auto.create.topics.max.number=100
delete.topic.enable=true

# Configuración específica de los 'topics'
topic.pendientes.num.partitions=1
topic.pendientes.retention.ms=525600

topic.en_proceso.num.partitions=1
topic.en_proceso.retention.ms=525600

topic.completados.num.partitions=1
topic.completados.retention.ms=525600
